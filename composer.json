{
    "name": "emanate/beem-sms",
    "description": "Refactoring way of sendeing SMS",
    "keywords": [
        "emanate",
        "laravel",
        "beem-sms"
    ],
    "homepage": "https://github.com/emanate/beem-sms",
    "license": "MIT",
    "authors": [
        {
            "name": "Emanate Software",
            "email": "hello@emanate.software",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.9.2",
        "illuminate/contracts": "^9.0",
        "ext-curl": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.8",
        "nunomaduro/collision": "^6.0",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "Emanate\\BeemSms\\": "src",
            "Emanate\\BeemSms\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Emanate\\BeemSms\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": false,
            "phpstan/extension-installer": false
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Emanate\\BeemSms\\BeemSmsServiceProvider"
            ],
            "aliases": {
                "BeemSms": "Emanate\\BeemSms\\Facades\\BeemSms"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
